.nav {
  width: 88%;
  height: 680rpx;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius: 10px;
  padding-top: 10px;
  position: relative;
}
.verify {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #000;
  font-size: 32rpx;
}
.center {
  width: 40%;
  padding-bottom: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: 1rpx solid #c6c5ca;
}
.center image {
  width: 30rpx;
  height: 20rpx;
  margin-top: 10rpx;
  color: #000000;
}
/* 背景图设置 */
page {
  width: 100%;
  height: 100%;
  background-image: url(/static/yx-login/bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
uni-radio .wx-radio-input,
uni-checkbox .wx-checkbox-input,
uni-radio .uni-radio-input,
uni-checkbox .uni-checkbox-input {
  margin: 0;
  width: 36rpx;
  height: 36rpx;
}
.title {
  text-align: justify;
  padding-right: 30rpx;
  font-size: 30rpx;
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
}
picker {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-right: 40rpx;
  overflow: hidden;
  position: relative;
}
picker .picker {
  line-height: 100rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  text-align: left;
  color: #c6c5ca;
}
picker::after {
  font-family: cuIcon;
  display: block;
  content: '\e6a3';
  position: absolute;
  font-size: 34rpx;
  color: #8799a3;
  line-height: 100rpx;
  width: 60rpx;
  text-align: center;
  top: 0;
  bottom: 0;
  right: -20rpx;
  margin: auto;
}
.cu-form-group picker .picker {
  line-height: 100rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  text-align: left;
}
.cu-form-group {
  padding: 0px !important;
}
.login-input {
  width: 85%;
  margin: 0px auto;
  border-bottom: 1px solid #c6c5ca;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.login-input input {
  width: 91%;
  border: none;
  height: 40px;
  color: #c6c5ca;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 14px;
  margin-top: 15px;
  outline: none;
  -webkit-appearance: none;
  /*去除系统默认的样式*/
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  /* 点击高亮的颜色*/
}
.login-input image {
  width: 20px;
  height: 20px;
  margin-top: 25px;
}
.login-input .delete {
  width: 20px;
  height: 20px;
  margin-left: -20px;
}
.login-input .switch {
  width: 23px;
  height: 14px;
  padding-top: 3px;
}
.login-button {
  width: 85%;
  margin: 0px auto;
}
.login-button radio {
  font-size: 14px;
  color: #ffffff;
}
.active {
  color: #f50808;
  border-bottom: 1px solid #f50808;
}
.tips {
  color: #f50808;
  font-size: 12px;
  display: initial;
  float: right;
  padding-right: 30px;
}

