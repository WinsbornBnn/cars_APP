input:focus {
  outline: none;
}
/* 背景图设置 */
page {
  width: 100%;
  height: 100%;
  background-image: url(/static/yx-login/bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.login-input {
  width: 85%;
  height: 63px;
  margin: 0px auto;
  border-bottom: 1px solid #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.login-input input {
  width: 91%;
  border: none;
  height: 40px;
  color: #ffffff;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 14px;
  margin-top: 25px;
}
.login-input image {
  width: 23px;
  height: 20px;
  margin-top: 35px;
}
.login-input .delete {
  width: 20px;
  height: 20px;
  margin-left: -20px;
}
.login-input .switch {
  width: 23px;
  height: 14px;
  padding-top: 3px;
}
.UserName-input {
  width: 85%;
  height: 63px;
  margin: 0px auto;
  border-bottom: 1px solid #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.UserName-input input {
  width: 65%;
  border: none;
  height: 40px;
  color: #ffffff;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 14px;
  margin-top: 25px;
}
.UserName-input image {
  width: 23px;
  height: 20px;
  margin-top: 35px;
}
.UserName-input button {
  margin-top: 30px;
  margin-left: 6px;
  -webkit-border-radius: 1px;
          border-radius: 1px;
}
.UserName-input .delete {
  width: 20px;
  height: 20px;
  margin-left: -20px;
}
.UserName-input .obtain {
  width: 90px;
  height: 33px;
  font-size: 13px;
  color: #ffffff;
  text-align: center;
  line-height: 33px;
  padding-top: 29px;
}
.login-button {
  width: 85%;
  margin: 0px auto;
}
.login-button button {
  width: 100%;
  font-size: 15px;
  height: 40px;
  color: #ffffff;
  background-color: #4e6ef2;
  margin-top: 16px;
}
.active {
  color: #f50808;
  border-bottom: 1px solid #f50808;
}
.tips {
  color: #f50808;
  font-size: 12px;
  display: initial;
  float: right;
  padding-right: 30px;
}

